{
    "trailingSlash": "auto",
    "routes": [
        {
            "route": "/login",
            "rewrite": "/.auth/login/ssowd",
            "allowedRoles": ["anonymous"]
        },
        {
            "route": "/logout",
            "rewrite": "/.auth/logout",
            "allowedRoles": ["authenticated"]            
        },      
        {
            "route": "/userprofile",
            "redirect": "/.auth/me",
            "allowedRoles": ["authenticated"]
        },              
        {
            "route": "/",
            "allowedRoles": ["authenticated"]            
        },
        {
            "route": "/index.html",
            "allowedRoles": ["authenticated"]            
        },
        {
          "route": "/api/*",
          "methods": ["GET"],
          "allowedRoles": ["authenticated"]
        }        
    ],    
    "responseOverrides": {
        "401": {
            "redirect": "/login",
            "statusCode": 302
        }
    },
    "globalHeaders": {
        "Access-Control-Allow-Origin": "https://sso.world-direct.at",
        "Access-Control-Allow-Methods": "POST, GET, OPTIONS"
    },
    "auth": {        
      "identityProviders": {
        "customOpenIdConnectProviders": {
          "ssowd": {            
            "registration": {
              "clientIdSettingName": "SSOWD_PROVIDER_CLIENT_ID",
              "clientCredential": {
                "clientSecretSettingName": "SSOWD_PROVIDER_CLIENT_SECRET"
              },
              "openIdConnectConfiguration": {
                "issuer": "https://sso.world-direct.at/auth/realms/fits-invenium", 
                "authorizationEndpoint": "https://sso.world-direct.at/auth/realms/fits-invenium/protocol/openid-connect/auth", 
                "tokenEndpoint": "https://sso.world-direct.at/auth/realms/fits-invenium/protocol/openid-connect/token", 
                "certificationUri": "https://sso.world-direct.at/auth/realms/fits-invenium/protocol/openid-connect/certs"
              }
            },
            "login": {
              "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
              "scopes": [],
              "loginParameterNames": []
            }
          }
        }
      }
    }
  }